{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "test.js"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }